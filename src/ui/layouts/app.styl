html,body,#app,.root
  width 100%
  height 100%
  // font-family  PingFangSC-Regular, 微软雅黑, Arial, Helvetica, sans-serif
  font-family  PingFangSC-Regular, Arial, Helvetica, sans-serif
  min-width 375px
  min-height 600px
  margin 0
  padding 0

#app
  position relative

*, *:after, *:before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.vhCenter{
  display: -webkit-flex;
  display: -webkit-box;
  display: flex;
  display: box;

  -webkit-flex-direction: row;
  flex-direction: row;

  -webkit-box-align: center;
  box-align: center;
  -webkit-box-pack: center;
  box-pack: center;

  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.withRow{
  display: -ms-flexbox;
  -ms-flex-direction: row;

  display:flex;
  display:-webkit-box;
  -webkit-flex-direction:row;
  -webkit-box-orient:horizontal;
}
.withColumn{
  display: -ms-flexbox;
  -ms-flex-direction: column;

  display:flex;
  display:-webkit-box;
  -webkit-flex-direction:column;
  -webkit-box-orient:vertical;
}
.withRowLeftAuto,.withColumnLeftAuto
  -webkit-box-flex 1
  flex 1

#chartjs-tooltip
  background-color black
  color white
  border-radius 5px 5px
