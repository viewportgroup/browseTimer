.modal{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow-Y: hidden;
  display: flex;
  display: -webkit-box;
  -webkit-flex-direction: column;
  -webkit-box-orient: vertical;
  z-index: 999;
  pointer-events: all;
}

.modal_content{
  -webkit-box-flex: 1;
  flex: 1;
  overflow-x: hidden;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.modal_content > div {
  width: 80%;
  min-height: 100px;
  background-color: white;
  -webkit-border-radius: 10px 10px;
  padding: 10px;
  position: relative;
  overflow-y: auto;
  overflow-x: hidden;
}
.modal_close {
  position: absolute;
  right: 10px;
  top: 10px;
}
.modal_close:hover{
  color: red;
}
